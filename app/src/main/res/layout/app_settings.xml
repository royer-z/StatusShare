<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/settingsConstraintLayout">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/settingsLinearLayout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:text="@string/settingsHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="112dp"
                tools:layout_editor_absoluteX="77dp" android:id="@+id/settingsHeading" android:textSize="50sp"
                android:textAlignment="center"/>
        <Button
                android:text="@string/settingsLogoutButton"
                android:layout_width="match_parent"
                android:layout_height="75dp" android:id="@+id/settingsLogoutButton"
                android:layout_marginTop="300dp" android:textAlignment="center"
                android:layout_gravity="center_horizontal" android:textSize="24sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>