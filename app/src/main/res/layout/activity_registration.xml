<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/registrationConstraintLayout">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/registrationScrollView"
            android:fillViewport="true" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registrationLinearLayout" android:orientation="vertical">
            <TextView
                    android:text="@string/registrationHeading"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/registrationHeading"
                    android:textSize="50sp"
                    android:textAlignment="center"
                    android:layout_marginTop="0dp"
            />
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:id="@+id/registrationFirstName"
                    android:layout_marginTop="20dp"
                    android:hint="@string/registrationFirstName" android:autofillHints="" android:textSize="24sp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:id="@+id/registrationLastName"
                    android:layout_marginTop="10dp"
                    android:hint="@string/registrationLastName"
                    android:autofillHints="" android:textSize="24sp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:id="@+id/registrationEmail"
                    android:layout_marginTop="10dp"
                    android:hint="@string/registrationEmail"
                    android:autofillHints="" android:textSize="24sp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/registrationPassword"
                    android:layout_marginTop="10dp"
                    android:hint="@string/registrationPassword"
                    android:autofillHints="" android:textSize="24sp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/registrationConfirmPassword"
                    android:layout_marginTop="10dp"
                    android:hint="@string/registrationConfirmPassword"
                    android:autofillHints="" android:textSize="24sp"/>
            <Button
                    android:text="@string/registrationRegisterButton"
                    android:textColor="@color/link"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/registrationRegisterButton"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal" android:textSize="24sp"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>