<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/registrationConstraintLayout">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/registrationScrollView"
            android:fillViewport="true">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/registrationRelativeLayout">
            <TextView
                    android:text="@string/registrationHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/registrationHeading"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:layout_marginTop="0dp"
                    android:layout_alignParentTop="true"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/registrationFirstName"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/registrationHeading"
                    android:hint="@string/registrationFirstName" android:autofillHints=""/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/registrationLastName"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/registrationFirstName"
                    android:hint="@string/registrationLastName"
                    android:autofillHints=""/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/registrationEmail"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/registrationLastName"
                    android:hint="@string/registrationEmail"
                    android:autofillHints=""/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/registrationPassword"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/registrationEmail"
                    android:hint="@string/registrationPassword"
                    android:autofillHints=""/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/registrationConfirmPassword"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/registrationPassword"
                    android:hint="@string/registrationConfirmPassword"
                    android:autofillHints=""/>
            <Button
                    android:text="@string/registrationRegisterButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/registrationRegisterButton"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="164dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="159dp"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/registrationConfirmPassword"/>
            <Button
                    android:text="@string/registrationCancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/registrationCancelButton"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/registrationRegisterButton"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="161dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="162dp"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonNavBar"
                    android:layout_below="@+id/registrationCancelButton"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="161dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="162dp"
                    android:text="Navigation Bar"
                    android:layout_marginTop="30dp"/>
            <Button
                    android:text="Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/registrationProfileButton"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/buttonNavBar" android:layout_alignParentStart="true"
                    android:layout_marginStart="161dp" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="162dp"/>
            <Button
                    android:text="Edit profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/registrationEditProfileButton"
                    android:layout_marginTop="-37dp"
                    android:layout_below="@+id/registrationProfileButton"/>

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>