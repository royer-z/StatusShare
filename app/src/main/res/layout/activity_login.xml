<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/loginConstraintLayout">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/loginLinearLayout"
            android:orientation="vertical">

        <TextView
                android:text="@string/loginHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/loginHeading" android:textAlignment="center"
                android:textSize="36sp" android:layout_marginTop="0dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/loginEmail" android:autofillHints=""
                android:layout_marginTop="40dp"
                android:hint="@string/loginEmail"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/loginPassword" android:layout_marginTop="14dp"
                android:hint="@string/loginPassword" android:autofillHints=""/>
        <Button
                android:text="@string/loginLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginLoginButton"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="155dp"
                android:layout_marginStart="152dp"/>
        <Button
                android:text="@string/loginRegisterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginRegisterButton"
                android:layout_marginTop="30dp"
                android:layout_marginStart="152dp"
                android:layout_marginEnd="155dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>